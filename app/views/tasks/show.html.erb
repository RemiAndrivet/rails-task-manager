<h1><%= @task.title %></h1>
<%= link_to "Edit task", edit_task_path %>
<p><%= @task.details %></p>
<%if @task.completed == true %>
  <i class=“fas fa-check-square”>This task is completed</i>
<%else%>
  <i class=“far fa-square”>This task is not completed yet</i>
<%end%>

<%= link_to "See all tasks", tasks_path %>